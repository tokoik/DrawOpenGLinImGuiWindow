root = true

[*]
charset = utf-8
end_of_line = crlf
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 2

[*.{h,hpp,c,cpp,cc,c++}]
charset = utf-8-bom

[*.md]
trim_trailing_whitespace = false

[Makefile]
end_of_line = lf
indent_style = tab
indent_size = 8
